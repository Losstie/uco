<!--pages/goods_list/goods_list.wxml-->
<view class="goods_list">
  <Searchinput></Searchinput>
  <Tabs tabs="{{tabs}}" bindtabsChange="handleitemChange">
    <block wx:if="{{tabs[0].isActive}}">
      <view class="first_tab">
        <navigator class="goods_item">
          <!-- 左侧 图片容器 开始-->
          <view class="goods_img_warp">
            <image mode="widthFix" src="https://api-hmugo-web.itheima.net/full/5e38cf9e6e7c46a17fe1c597a883ae627977b296.jpg"></image>
          </view>
          <!-- 左侧 图片容器 结束-->
          <!-- 右侧 商品描述  开始-->
          <view class="goods_info_warp">
            <view class="goods_name">创维（Skyworth）65V9E 65英寸25核4K HDR高清智能电视</view>
            <view class="goods_price">$ 6499</view>
          </view>
          <!-- 右侧 商品描述  结束-->
        </navigator>

        <navigator class="goods_item" wx:for="{{goods_list}}" wx:key="goods_id">
          <!-- 左侧 图片容器 开始-->
          <view class="goods_img_warp">
            <image mode="widthFix" src="{{item.goods_small_logo?item.goods_small_logo:'https://ww1.sinaimg.cn/large/007rAy9hgy1g24by9t530j30i20i2glm.jpg'}}"></image>
          </view>
          <!-- 左侧 图片容器 结束-->
          <!-- 右侧 商品描述  开始-->
          <view class="goods_info_warp">
            <view class="goods_name">{{item.goods_name}}</view>
            <view class="goods_price">$ {{item.goods_price}}</view>
          </view>
          <!-- 右侧 商品描述  结束-->
        </navigator>
      </view>
    </block>
    <block wx:elif="{{tabs[1].isActive}}">1</block>
    <block wx:else>2</block>

  </Tabs>
</view>